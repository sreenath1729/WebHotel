@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Front.jpg" alt="WSH Hotel Front view" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                  Welcome to WSH Hotel
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Dining.jpg" alt="Dining" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Large Dining Rooms
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Room.jpg" alt="Luxury Rooms" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Luxury Bed Rooms
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Pool.jpg" alt="Pool" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    State of the art pools
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-sm-6">
        <h2>Welcome to Western Sydney Hotel</h2>
        <ul>
            <li>Five star Rooms</li>
            <li>Big conference halls</li>
            <li>Valet Parking</li>
        </ul>
    </div>
    <div class="col-sm-6">
        <h2>Explore more</h2>
        <ul>
            <li><a href="https://www.penrithcity.nsw.gov.au/">Penrith Council</a></li>
            <li><a href="http://www.bom.gov.au/nsw/forecasts/penrith.shtml">Penrith weather</a></li>
            <li><a href="https://www.tripadvisor.com.au/Attractions-g580476-Activities-Penrith_Greater_Sydney_New_South_Wales.html">Attractions</a></li>
            <li><a href="https://www.tripadvisor.com.au/Restaurants-g580476-Penrith_Greater_Sydney_New_South_Wales.html">Restaurants</a></li>
        </ul>
    </div>
  
</div>
