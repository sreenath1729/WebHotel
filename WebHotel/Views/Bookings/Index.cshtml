@model IEnumerable<WebHotel.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Surname
            </th>
            <th>
                Given name
            </th>
            <th>
                Room ID
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NextCheckOrder"]">
                    Check-In Date
                    </a>
            </th>
            <th>
                Check-Out Date
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NextCostOrder"]">
                    @Html.DisplayNameFor(model => model.Cost)
                </a>
            </th>

            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TheCustomer.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TheCustomer.GivenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TheRoom.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>

            <td>
                @*  <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
